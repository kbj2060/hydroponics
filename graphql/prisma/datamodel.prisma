
enum measurementFormat {
  LUX
  HUM
  TEMP
  CO2
  PH
  EC
}

enum SwitchFormat {
  FAN
  HUMIDIFIER
  LED
}

type Figure {
  id : ID! @id
  updatedAt : DateTime! @updatedAt
  value : Float!
  measurement : measurementFormat! 
}

type AuthPayload {
  id : ID! @id
  token : String
  user : User
}

type Switch {
  id : ID! @id
  machine : SwitchFormat!
  updatedAt : DateTime @updatedAt
  status : Boolean!
  controledBy : User
}

type User {
  id: ID! @id
  name: String! @unique
  password: String!
  createdAt : DateTime! @createdAt
  switches : [Switch!]!
}